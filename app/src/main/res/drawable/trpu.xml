<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="13%"
            android:pivotY="-40%">
            <shape
                android:shape="rectangle" >
                <gradient
                    android:startColor="#00171C56"
                    android:centerColor="#77171C56"
                    android:endColor="#252C83"
                    android:angle="360"
                    />
            </shape>
        </rotate>
    </item>

</layer-list>
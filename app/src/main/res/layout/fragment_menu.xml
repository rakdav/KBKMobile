<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="?attr/actionBarSize"
    tools:context=".ui.menu.MenuFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal"
        android:background="@drawable/light">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_margin="16dp"
            android:elevation="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/splash"

            />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="14dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginVertical="4dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/textViewGroup"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/chngpass"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:text="Сменить пароль"
                android:background="@color/purple_500"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="fill_vertical"
                android:textSize="16sp"
                android:textColor="@color/orange_700"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/call_layout"
        android:background="@drawable/light"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="8dp"
        android:paddingVertical="5dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/ic_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:paddingVertical="10dp"
            android:src="@mipmap/ic_call"

            />
        <Button
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Звонок в учебный отдел"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/orange_700"
            android:icon="@android:drawable/ic_menu_search"
            android:background="@color/purple_500"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical"
        android:background="@drawable/light"
        android:paddingTop="13dp">
        <Button
            android:id="@+id/gradebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Зачетная книжка"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/purple_500"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Преподаватели"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/purple_500"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Галерея"
            android:background="@color/purple_500"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Обратная связь"
            android:background="@color/purple_500"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Документы для поступления"
            android:background="@color/purple_500"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="25dp"
            android:textAllCaps="false"
            android:text="Выйти"
            android:background="@color/purple_500"
            style="?android:attr/borderlessButtonStyle"
            android:gravity="fill_vertical"
            android:textSize="18sp"
            android:textColor="@color/orange_700"

            />

    </LinearLayout>
</LinearLayout>